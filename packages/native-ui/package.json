{
  "name": "@utilitywarehouse/native-ui",
  "version": "1.0.0",
  "description": "Utility Warehouse React Native UI library",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "module": "build/index",
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf node_modules && rm -rf build",
    "generateColours": "node ./scripts/generateColours.js",
    "lint:fix": "TIMING=1 eslint --fix --max-warnings 0 src",
    "lint": "TIMING=1 eslint --max-warnings 0 src",
    "build": "tsc && tsc --p tsconfig.lab.json",
    "watch": "tsc --watch",
    "watch:lab": "tsc --p tsconfig.lab.json  --watch",
    "figma:create": "figma connect create",
    "figma:publish": "figma connect publish",
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "set NODE_ENV=production & storybook build",
    "storybook:generate": "sb-rn-get-stories --config-path .ondevice"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@expo/html-elements": "latest",
    "@gluestack-ui/accordion": "1.0.7",
    "@gluestack-ui/alert": "0.1.15",
    "@gluestack-ui/button": "1.0.7",
    "@gluestack-ui/checkbox": "0.1.32",
    "@gluestack-ui/icon": "0.1.22",
    "@gluestack-ui/input": "0.1.31",
    "@gluestack-ui/pressable": "0.1.16",
    "@gluestack-ui/radio": "0.1.33",
    "@gluestack-ui/spinner": "0.1.14",
    "@gluestack-ui/switch": "0.1.22",
    "@gluestack-ui/textarea": "0.1.23",
    "@utilitywarehouse/colour-system": "workspace:^",
    "@utilitywarehouse/design-tokens": "workspace:^",
    "@utilitywarehouse/react-native-icons": "1.14.0",
    "nanoid": "^5.0.8"
  },
  "devDependencies": {
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@chromatic-com/storybook": "^4.1.1",
    "@figma/code-connect": "^1.3.3",
    "@storybook/addon-a11y": "^9.1.3",
    "@storybook/addon-docs": "^9.1.3",
    "@storybook/addon-vitest": "^9.1.3",
    "@storybook/react-native-web-vite": "^9.1.3",
    "@types/react": "^19.1.10",
    "@utilitywarehouse/fontsource": "^0.1.0",
    "@utilitywarehouse/react-icons": "^1.14.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "9.1.3",
    "playwright": "^1.53.1",
    "react": "^19.1.0",
    "react-native": "0.81.1",
    "react-native-edge-to-edge": "1.6.1",
    "react-native-gesture-handler": "2.26.0",
    "react-native-nitro-modules": "^0.29.3",
    "react-native-reanimated": "3.19.1",
    "react-native-svg": "^15.12.1",
    "react-native-unistyles": "3.0.11",
    "react-native-web": "^0.21.1",
    "remark-gfm": "^4.0.1",
    "storybook": "^9.1.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": ">=17 || ^18.0.0 || ^19.0.0",
    "react-native": ">=0.77",
    "react-native-gesture-handler": "^2.22.0",
    "react-native-reanimated": "3.x || 4.x",
    "react-native-svg": ">=13.4.0",
    "react-native-unistyles": ">=>3.0.0",
    "react-native-web": ">=0.19"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    }
  }
}
