{
  "name": "native-ui-storybook",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf node_modules &&  rm -rf .expo",
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "lint:fix": "TIMING=1 eslint --fix --max-warnings 0 --ext ts,tsx",
    "lint": "TIMING=1 eslint --max-warnings 0 --ext ts,tsx ./",
    "build:preview:android": "eas build --profile preview -p android --local --output './build/native-ui.apk'",
    "build:development:android": "eas build --profile development -p android --local",
    "build:development-sim:android": "eas build --profile development-simulator -p android --local",
    "build:preview:ios": "mv ./app.config.ts ./app.config.android.ts && mv ./app.config.ios.ts ./app.config.ts && EAS_LOCAL_BUILD_WORKINGDIR='./eas-build' eas build --profile preview -p ios --local --output './build/native-ui.tar.gz' && mv ./app.config.ts ./app.config.ios.ts && mv ./app.config.android.ts ./app.config.ts",
    "build:development:ios": "eas build --profile development -p ios --local",
    "build:development-sim:ios": "eas build --profile development-simulator -p ios --local",
    "eas-build-pre-install": "echo '//registry.npmjs.org/:_authToken=${NPM_TOKEN}' > temp.txt && echo 'registry=https://registry.npmjs.org/' >> temp.txt && cat ../../.npmrc >> temp.txt && mv temp.txt ../../.npmrc",
    "eas-build-post-install": "if [[ \"$OSTYPE\" == \"darwin\"* ]]; then sed -i '.bak' '/\\/\\/registry.npmjs.org\\/:_authToken=${NPM_TOKEN}/d' ../../.npmrc && sed -i '.bak' '/registry=https:\\/\\/registry.npmjs.org\\//d' ../../.npmrc && rm ../../.npmrc.bak; else sed -i '/\\/\\/registry.npmjs.org\\/:_authToken=${NPM_TOKEN}/d' ../../.npmrc && sed -i '/registry=https:\\/\\/registry.npmjs.org\\//d' ../../.npmrc; fi",
    "storybook:web": "storybook dev -p 6006",
    "storybook:build": "set NODE_ENV=production & storybook build",
    "storybook:generate": "sb-rn-get-stories --config-path .ondevice",
    "storybook": "cross-env STORYBOOK_ENABLED='true' expo start",
    "storybook:ios": "cross-env STORYBOOK_ENABLED='true' expo start --ios",
    "storybook:android": "cross-env STORYBOOK_ENABLED='true' expo start --android",
    "postinstall": "node ./scripts/postinstall.js"
  },
  "dependencies": {
    "@expo/metro-runtime": "6.1.1",
    "@expo/vector-icons": "^15.0.2",
    "@gorhom/bottom-sheet": "^5.1.2",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-native-community/datetimepicker": "8.4.4",
    "@react-native-community/slider": "5.0.1",
    "@storybook/addon-ondevice-actions": "9.0.14",
    "@storybook/addon-ondevice-controls": "9.0.14",
    "@storybook/react-native": "^9.0.14",
    "@types/react": "~19.1.12",
    "@utilitywarehouse/colour-system": "workspace:^",
    "@utilitywarehouse/design-tokens": "workspace:^",
    "@utilitywarehouse/fontsource": "^0.0.6",
    "@utilitywarehouse/native-ui": "workspace:^",
    "@utilitywarehouse/react-native-icons": "^1.7.1",
    "expo": "54.0.0-preview.12",
    "expo-constants": "18.0.6",
    "expo-dev-client": "6.0.7",
    "expo-font": "14.0.6",
    "expo-splash-screen": "31.0.7",
    "expo-xml-font": "^3.0.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-native": "0.81.1",
    "react-native-edge-to-edge": "1.6.0",
    "react-native-gesture-handler": "2.28.0",
    "react-native-markdown-display": "^7.0.2",
    "react-native-nitro-modules": "^0.28.0",
    "react-native-reanimated": "4.0.3",
    "react-native-safe-area-context": "5.6.1",
    "react-native-svg": "15.12.1",
    "react-native-unistyles": "3.0.10",
    "react-native-web": "^0.21.1",
    "storybook": "^9.0.15"
  },
  "devDependencies": {
    "@babel/core": "7.26.7",
    "babel-loader": "^9.1.3",
    "cross-env": "^7.0.3",
    "eas-cli": "^16.9.0",
    "eslint-plugin-storybook": "9.0.15",
    "typescript": "5.9.2"
  },
  "expo": {
    "install": {
      "exclude": [
        "react-native@~0.76.6",
        "react-native-reanimated@~3.16.1",
        "react-native-gesture-handler@~2.20.2",
        "react-native-screens@~4.4.0",
        "react-native-safe-area-context@~4.12.0",
        "react-native-webview@~13.12.5"
      ]
    }
  },
  "private": true
}
